<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/space_320"
    android:layout_height="@dimen/space_220"
    android:background="@drawable/common_dialog_frame">

    <TextView
        android:id="@+id/common_alert_dialog_title_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_40"
        android:layout_alignParentTop="true"
        android:gravity="center|left"
        android:paddingLeft="@dimen/space_20"
        android:text="温馨提示"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_20" />

    <View
        android:id="@+id/common_alert_dialog_divide"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:layout_below="@+id/common_alert_dialog_title_tv"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        android:background="@color/color_bfbfbf" />

    <TextView
        android:id="@+id/common_alert_dialog_msg_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@id/common_alert_dialog_btn_layout"
        android:layout_below="@id/common_alert_dialog_title_tv"
        android:layout_centerHorizontal="true"
        android:gravity="left|center_vertical"
        android:paddingBottom="@dimen/space_5"
        android:paddingLeft="@dimen/space_10"
        android:paddingRight="@dimen/space_10"
        android:paddingTop="@dimen/space_5"
        android:text="确认删除？"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_16" />

    <EditText
        android:id="@+id/common_alert_dialog_qty_edt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_56"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/space_10"
        android:background="@drawable/common_dialog_frame"
        android:gravity="center"
        android:inputType="number"
        android:maxLines="1"
        android:maxLength="5"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_16"
        android:visibility="gone" />

    <EditText
        android:id="@+id/common_alert_dialog_content_edt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_56"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/space_10"
        android:background="@drawable/common_dialog_frame"
        android:gravity="center"
        android:inputType="text"
        android:maxLines="1"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_16"
        android:visibility="gone" />


    <RelativeLayout
        android:id="@+id/common_alert_dialog_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_40"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/space_10"
        android:layout_marginTop="@dimen/space_10">

        <TextView
            android:id="@+id/common_alert_dialog_sure_tv"
            android:layout_width="@dimen/space_120"
            android:layout_height="@dimen/space_40"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20"
            android:background="@drawable/common_button"
            android:gravity="center"
            android:paddingLeft="@dimen/space_10"
            android:paddingRight="@dimen/space_10"
            android:text="确认"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/common_alert_dialog_cancle_tv"
            android:layout_width="@dimen/space_120"
            android:layout_height="@dimen/space_40"
            android:layout_alignParentRight="true"
            android:layout_gravity="center|right"
            android:layout_marginRight="@dimen/space_20"
            android:background="@drawable/btn_bfbfbf_frame"
            android:gravity="center"
            android:paddingLeft="@dimen/space_10"
            android:paddingRight="@dimen/space_10"
            android:text="取消"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/text_16" />
    </RelativeLayout>

</RelativeLayout>